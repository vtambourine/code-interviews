.ShowMoreButton {
    $size = 176px;

    position: relative;
    top: -1px;
    text-align: center;

    width: $size;
    left: 50%;
    padding: 8px 0;
    margin-left: ((- $size) / 2);
    background-color: white;
    text-transform: uppercase;
    font-size: 11px;
    font-weight: bold;
    cursor: pointer;
    color: rgb(100, 100, 100);
    border-width: 1px;
    border-style: dashed solid solid;
    border-color: rgb(191, 191, 191);

    &:hover {
        color: red;
    }
}
